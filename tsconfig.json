{
  "compileOnSave": true,

  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "paths": {
      "redux": ["src/typings/redux"] // override library types with your alternative type-definitions in typings folder
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
